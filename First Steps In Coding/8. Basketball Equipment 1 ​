using System;
class HelloCsharp
{
    static void Main()
    {


        int yearTax = int.Parse(Console.ReadLine());

        double sneakers = yearTax - yearTax * 0.40;
        double clothes = sneakers - sneakers * 0.20;
        double ball = clothes / 1 / 4;
        double accessories = ball / 1 / 5;
        double sum = yearTax + sneakers + clothes + ball + accessories;
        Console.WriteLine(sum);
    }
}
