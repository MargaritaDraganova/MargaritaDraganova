using System;

class HelloCsharp
{
    static void Main()
    {

        int poliester = int.Parse(Console.ReadLine());
        int boq = int.Parse(Console.ReadLine());
        int razreditel = int.Parse(Console.ReadLine());
        int hours = int.Parse(Console.ReadLine());

       
        double sumMatirial= (poliester + 2) * 1.50 + (boq * 0.10 + boq) * 14.50 + razreditel * 5 + 0.40;
        double sumWorking = sumMatirial * 0.30 * hours;
        Console.WriteLine(sumMatirial+sumWorking);
        


    }
}

